    <div class="container">
        <script>
            const data = {
                "Core Functionality": [
                    {
                        "fact": "Universal Snippet Manager",
                        "description": "Pieces helps you capture and organize all types of code snippets, from small functions to complex algorithms."
                    },
                    {
                        "fact": "Multi-Language Support",
                        "description": "Pieces understands and formats code in dozens of programming languages, ensuring accurate syntax highlighting."
                    },
                    {
                        "fact": "Cross-Platform Compatibility",
                        "description": "Use Pieces seamlessly across Windows, macOS, and Linux, maintaining consistency in your workflow."
                    },
                    {
                        "fact": "Robust Search",
                        "description": "Quickly find any saved snippet using keywords, tags, or even code within the snippet itself."
                    },
                    {
                        "fact": "Smart Description Generation",
                        "description": "Pieces can automatically suggest descriptions for your snippets based on their content."
                    }
                ],
                // ... (Add other categories and facts)
            };

            document.addEventListener('DOMContentLoaded', () => { // Wait for DOM to be fully loaded
                const container = document.querySelector('.container');
                for (const category in data) {
                    const featureDiv = document.createElement('div');
                    featureDiv.classList.add('feature');
                    featureDiv.innerHTML = `<h2>${category}</h2>`; 

                    data[category].forEach(item => {
                        featureDiv.innerHTML += `<h3>${item.fact}</h3>
                                                 <p>${item.description}</p>
                                                 <button class="fact-check-button" onclick="factCheck('${item.fact}')">Fact Check</button>`;
                    });

                    container.appendChild(featureDiv);
                }
            });

            function factCheck(fact) {
                // TODO: Replace with actual fact-checking logic
                alert("Fact-checking the following: " + fact + "\n\nThis will eventually call your fact-checking API or service."); 
            }
        </script>
    </div>
